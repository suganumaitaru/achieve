<div class="container">
  <div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
    <h2>コメントを編集する</h2>
    <p id="notice"><%= notice %></p>
    <!-- 変数を持ってくる、パスを入れる -->
    <!-- editの場合は自動的にupdateアクションへ渡るようになる -->
    <%= form_for(@comment, url:blog_comment_path) do |f| %>
      <%= f.label :content %>
      <%= f.text_field :content, class:'form-control' %>
      <br>
      <%= f.submit '編集する', class: 'btn btn-primary btn-block' %>
    <% end %>


    <%= link_to "コメント一覧画面にもどる", blog_path(@comment.blog.id) %>
  </div>
</div>
